<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="   Partager   "
        android:id="@+id/buttonRecommander"
        android:textSize="20dp"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="   Wishlist   "
        android:id="@+id/buttonAddToWishlist"
        android:textSize="20dp"
        android:background="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/etoiles"
        android:id="@+id/buttonNotation"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/buttonRecommander"
        android:layout_toEndOf="@+id/buttonRecommander"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:text=" Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textDescription"
        android:textSize="14dp"

        android:layout_below="@+id/textTitre"
        android:layout_toRightOf="@+id/buttonAffiche"
        android:layout_toEndOf="@+id/buttonAffiche"
        android:layout_marginTop="35dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/affichefilm"

        android:id="@+id/buttonAffiche"

        android:layout_alignTop="@+id/textDescription"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/fleche"
        android:id="@+id/buttonFleche"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/buttonNotation"
        android:layout_toEndOf="@+id/buttonNotation"
        android:layout_marginTop="30dp" />

    <TextView
        android:text="Titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/textTitre"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textDescription"
        android:layout_toStartOf="@+id/textDescription" />

</RelativeLayout>
