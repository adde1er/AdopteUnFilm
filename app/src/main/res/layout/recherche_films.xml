<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/searchViewFilm"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="Rechercher un film"
        >



    </SearchView>

    <EditText
        android:layout_height="50dp"
        android:layout_width="200dp"
        android:textSize="25dp"
        android:hint="Rechercher un film"
        android:id="@+id/rechercher_un_film"
        android:layout_toRightOf="@+id/searchViewFilm"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/validerRechercheFilm"
        android:text="Valider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rechercher_un_film"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <!--Mettre une liste view ici-->

    </RelativeLayout>
